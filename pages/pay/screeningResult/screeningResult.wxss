/* pages/pay/screeningResult/screeningResult.wxss */
page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 750rpx;
}

.not-login-contain {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 750rpx;
    height: 750rpx;
    margin-top: 41px;
}

.not-login-contain image {
    width: 160rpx;
    height: 160rpx;
}

.tip {
    padding-top: 8px;
    padding-bottom:25px;
    font-size: 14px;
    color: #aaa
}

.btn-login {
    background-color: #0f80dd;
    color: #ffffff;
    border: none;
    width: 350rpx;
    font-size: 18px;
}

.btn-login:active {
    border: none;
    background-color: #1a8be9;
}

/**登陆后部分**/
.contain {
    width: 750rpx;
}

.menu {
    width: 750rpx;
    position: fixed;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 50px;
    border-bottom: 1px solid #e5e5e5;
    background-color: #ffffff;
}

.menu-right {
    height: 50px;
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    font-size: 17px;
    color: #333;
}

.menu-right view {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.menu-right image {
    width: 12px;
    height: 12px;
    padding-left: 5px;
}

.time-range {
    font-size: 14px;
}

.time-range text:last-child {
    padding-top: 3px;
}

.time-range>view {
    display: flex;
    flex-direction: column;
}

/**主题内容部分**/
.content {
    margin-top: 51px;
    padding-bottom: 50px;
    width: 750rpx;
}

.item {
    font-size: 14px;
    color: #333;
    flex: 1;
    height: 40px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 12px;
    padding-right: 12px;
}

.item:nth-child(even) {
    background-color: #ffffff;
}

.item-time {
    flex: 5;
    text-align: left;
}

.blue {
    color: #0783e8;
}

.item-receivable,
.item-pay {
    flex: 2;
}

.item-receivable {
    text-align: left;
}

.item-pay {
    text-align: right;
    padding-right: 6px;
}

.total {
    position: fixed;
    bottom: 0;
    width: 750rpx;
    height: 50px;
    background-color: #ddf0ff;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.total>view {
    height: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}

.total>view>text:first-child {
    font-size: 12px;
    color: #0783e8;
}

.total>view>text:last-child {
    padding-top: 3px;
    font-size: 14px;
    color: #333;
}

.total-price {
    align-items: center;
    flex: 1;
}

.total-receivable {
    flex: 1;
    padding-left: 24px;
}

.total-pay {
    flex: 1;
    padding-right: 16px;
}

.yellow {
    color: #ff7200 !important;
}