/* pages/confirmOrder/priceDetail/priceDetail.wxss */
page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background-color: #f5f5f5;
    width: 750rpx;
}


.head {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.total-price {
    margin-top: 15px;
    height: 60px;
    line-height: 60px;
}

.total-price-title,
.price-info-title {
    font-size: 22px;
    color: #333;
}

.price-info-title {
    margin-top: 30px;
}

.total-price-content {
    font-size: 26px;
    color: #f39769;
}

.head>text {
    font-size: 16px;
    color: #333;
}

.price-detail,
.price-info {
    margin-top: 12px;
    padding-top: 4px;
    border-top: 1px solid #e5e5e5;
    color: #888;
    width: 500rpx;
    font-size: 18px;
    line-height: 34px;
}

.price-detail-item,
.price-info-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.price-detail-item>text:last-child,
.price-info-item>text:last-child {
    color: #333;
}

.tip {
    margin-top: 20px;
    display: block;
    width: 500rpx;
    font-size: 14px;
    color: #888;
}