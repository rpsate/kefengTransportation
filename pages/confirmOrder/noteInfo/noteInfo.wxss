/* pages/confirmOrder/noteInfo/noteInfo.wxss */
page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    align-items: center;
    height: 100%;
    width: 750rpx;
}

.note-info {
    position: relative;
    margin-top: 20px;
    width: 690rpx;
    padding: 30rpx;
    line-height: 26px;
    font-size: 16px;
    color: 333;
    height: 100px;
    background-color: #ffffff;
    overflow-y: scroll;
}

.note-info-tip {
    position: absolute;
    right: 6px;
    bottom: 4px;
    font-size: 14px;
    color: #aaa;
}

.btn-confirm {
    margin-top: 20px;
    width: 700rpx;
    background-color: #1a8be9;
    color: #ffffff;
    height: 50px;
    line-height: 50px;
    font-size: 18px;
}

.btn-confirm:active {
    background-color: #7dbef4;
}

button[disabled].btn-confirm {
    background-color: #7dbef4;
    color: #fefefe;
}

.note-contain {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    font-size: 14px;
}

.note-contain>view {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
}

.note-contain>view>view {
    color: #888;
    border: 2px;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 5px;
    padding-bottom: 5px;
    background-color: #ffffff;
}