/* pages/confirmOrder/chooseCar/chooseCar.wxss */
page {
    display: flex;
    flex-direction: column;
    align-items: top;
    justify-content: center;
    background-color: #f5f5f5;
    width: 750rpx;
}

.car-contain {
    display: flex;
    flex-direction: column;
    width: 750rpx;
    margin-top: 20px;
    background-color: #ffffff;
}

.title {
    display: flex;
    justify-content: left;
    align-items: center;
    width: 750rpx;
    height: 40px;
    padding-left: 20px;
    color: #333;
    border-bottom: 1px solid #e5e5e5;
}

.content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 750rpx;
    height: 140px;
}

.content-inner {
    display: flex;
    flex-direction: row;
    width: 660rpx;
    height: 110px;
    background-color: #ddf0ff;
    border-radius: 4px;
}

.car-image {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 2;
}

.car-image image {
    width: 120px;
    height: 60px;
}

.car-text {
    font-size: 13px;
    line-height: 20px;
    color: #fb8f19;
}

.car-info {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
}

.car-info text{
    padding-top: 2px;
    font-size: 13px;
    color: #333;
}