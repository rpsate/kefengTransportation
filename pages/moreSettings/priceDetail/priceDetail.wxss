/* pages/moreSettings/priceDetail/priceDetail.wxss */
page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 750rpx;
}

.nav {
    position: fixed;
    width: 750rpx;
    height: 50px;
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: flex-start;
    color: #333;
}

.nav>view {
    position: relative;
    height: 48px;
    line-height: 48px;
}

.active {
    color: #0783e7;
    border-bottom: 2px solid #0783e7;
}

/**contain**/
.contain {
    margin-top: 50px;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    color: #333;
    font-size: 16px;
    align-items: center;
}

.table {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bold {
    font-weight: bold;
}

.table-row {
    width: 700rpx;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    padding-top: 10px;
    padding-bottom: 10px;
}

.table-row text:first-child {
    width: 250rpx !important;
    text-align: left !important;
}

.table-row text:nth-child(2) {
    width: 150rpx;
    text-align: right;
    margin-right: 40rpx;
}

.table-row text:last-child {
    width: 260rpx;
    text-align: right;
}

.tip {
    margin-top: 60px;
    font-size: 14px;
    line-height: 20px;
    color: #888;
    width: 600rpx;
}