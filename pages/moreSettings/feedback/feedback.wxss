/* pages/moreSettings/feedback/feedback.wxss */

page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 750rpx;
}

.nav {
    position: fixed;
    width: 750rpx;
    height: 50px;
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: flex-start;
    color: #333;
    border-bottom: 1px solid #e5e5e5;
}

.nav>view {
    position: relative;
    height: 48px;
    line-height: 48px;
}

.active {
    color: #0783e7;
    border-bottom: 2px solid #0783e7;
}

.tip-dot {
    width: 10px;
    height: 10px;
    border-radius: 5px;
    background-color: #fa4b4a;
    position: absolute;
    top: 10px;
    right: -10px;
}

/**意见反馈**/
.feedback {
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    width: 750rpx;
}

.feedback-title {
    font-size: 14px;
    color: #888;
    margin-top: 18px;
    padding-bottom: 4px;
    padding-left: 12px;
}

.note-info {
    position: relative;
    width: 690rpx;
    padding: 30rpx;
    line-height: 26px;
    font-size: 16px;
    color: 333;
    height: 100px;
    background-color: #ffffff;
}

.note-info-tip {
    position: absolute;
    right: 6px;
    bottom: 4px;
    font-size: 14px;
    color: #aaa;
}

.btn-confirm {
    margin-top: 20px;
    width: 700rpx;
    background-color: #1a8be9;
    color: #ffffff;
    height: 50px;
    line-height: 50px;
    font-size: 18px;
}

.btn-confirm:active {
    background-color: #7dbef4;
}

button[disabled].btn-confirm {
    background-color: #7dbef4;
    color: #fefefe;
}

.updateImage {
    width: 750rpx;
    display: block;
    background-color: #ffffff;
}

.updateImage-box {
    float: left;
    position: relative;
    width: 60px;
    height: 60px;
    padding-top: 12px;
    padding-left: 12px;
    padding-bottom: 12px;
    
}

.updateImage-box image {
    width: 60px;
    height: 60px;
    z-index: 0;
}

.updateImage-box>.close {
    width: 20px;
    height: 20px;
    padding: 10px;
    position: absolute;
    top: -10px;
    right: -20px;
    z-index: 1;
}

/**意见反馈**/
.feedback-record {
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    width: 750rpx;
    overflow-x: hidden;
}

.feedback-group {
    margin-top: 20px;
    background-color: #ffffff;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
}

.feedback-group-item {
    width: 750rpx;
    padding-top: 4px;
    padding-bottom: 3px;
    margin-left: 12px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.item-title {
    font-size: 16px;
    color: #888;
    width: 158rpx;
}

.item-content {
    font-size: 15px;
    line-height: 22px;
    color: #333;
    display: flex;
    flex-direction: column;
}

.item-content-text {
    padding-right: 6px;
    width: 560rpx;
}

.item-content-image image {
    width: 60px;
    height: 60px;
    margin: 6px;
    margin-left: 0 !important;
}

.border-top {
    border-top: 1px solid #e5e5e5;
}
.reply {
    color: #0783e7;
}