/* pages/me/usuallyAddress/usuallyAddress.wxss */
view {
    overflow-x: hidden;
}

page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
}

.not-contain {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 750rpx;
    height: 750rpx;
    margin-top: 41px;
}

.not-contain image {
    width: 160rpx;
    height: 160rpx;
}

.tip {
    padding-top: 8px;
    padding-bottom:25px;
    font-size: 14px;
    color: #aaa
}

.btn-add-address {
    background-color: #0f80dd;
    color: #ffffff;
    border: none;
    width: 350rpx;
    font-size: 18px;
}

.btn-add-address:active {
    border: none;
    background-color: #1a8be9;
}

/**主要内容**/

.btn-add {
    margin-top: 20px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 18px;
    color: #333;
    height: 50px;
    width: 750rpx;
    background-color: #ffffff;
}

.btn-add image {
    width: 20px;
    height: 20px;
    padding-right: 5px;
}

.address-group {
    margin-top: 20px;
    width: 750rpx;
    background-color: #ffffff;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.address-head {
    margin-left: 12px;
    height: 40px;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.address-head image {
    width: 18px;
    height: 18px;
    padding-right: 10px;
}

.address-head text {
    font-size: 17px;
    color: #333;
    font-weight: bold;
}

.address {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 70px;
}

.address-icon {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70px;
    width: 18px;
    padding-right: 12px;
    margin-left: 12px;
}

.address-icon image {
    width: 14px;
    height: 14px;
    z-index: 1;
}

.address-content {
    display: flex;
    flex-direction: column;
    align-items: cneter;
}

.name {
    font-size: 18px;
    color: #333;
}

.district,
.person {
    padding-top: 2px;
    font-size: 14px;
    color: #888;
}

.address-icon-start::after,
.address-icon-passby::after,
.address-icon-end::after {
    content: "";
    position: absolute;
    display: block;
    border-left: 1px solid #e5e5e5;
    border-right: 1px solid #e5e5e5;
    z-index: 0;
}

.address-icon-start::after {
    height: 35px;
    bottom: 0;
}

.address-icon-passby::after {
    height: 70px;
    top: 0;
}

.address-icon-end::after {
    height: 35px;
    top: 0px;
}

.address-footer {
    width: 750rpx;
    height: 50px;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    margin-left: 12px;
    border-top: 1px solid #e5e5e5;
}

.address-footer view {
    font-size: 18px;
    padding-top: 3px;
    padding-bottom: 3px;
    padding-left: 12px;
    padding-right: 12px;
    border-radius: 20px;
    border: 1px solid #e5e5e5;
    color: #333;
    margin-right: 12px;
}

.active {
    margin-right: 30px !important;
    color: #0783e7 !important;
    border-color: #1a8be9 !important;
}