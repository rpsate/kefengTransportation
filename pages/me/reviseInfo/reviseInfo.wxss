/* pages/me/reviseInfo/reviseInfo.wxss */
view {
    overflow-x: hidden;
}

page {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 750rpx;
}

.list-group {
    width: 750rpx;
    background-color: #ffffff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.list-group-title {
    margin-top: 18px;
    padding-bottom: 4px;
    padding-left: 12px;
    font-size: 14px;
    color: #888;
}

.list-item,
.list-head-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 732rpx;
    height: 50px;
    line-height: 50px;
    margin-left: 12px;
}

.list-head-item {
    height: 80px !important;
    line-height: 80px !important;
}

.border-bottom {
    border-bottom: 1px solid #e5e5e5;
}

.list-item-title,
.list-head-item-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 50px;
    font-size:18px;
    color: #333;
}

.list-head-item-title {
    height: 80px !important;
}

.list-item-content,
.list-head-item-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 50px;
    padding-right: 14px;
    font-size:16px;
    color: #aaa;
}

.list-head-item-content {
    height: 80px !important;
    width: 80px;
}

.list-item-content>.icon,
.list-head-item-content>.icon {
    width: 15px;
    height: 15px;
    padding-left: 6px;
}

.head-image {
    width: 60px;
    height: 60px;
    border-radius: 30px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

.btn {
    position: absolute;
    bottom: 20px;
    width: 680rpx;
    height: 50px;
    margin-left: 35rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 18px;
    color: #ffffff;
    border-radius: 5px;
    background-color: #0f80dd;
}

.btn:active {
    background-color: #7dbef4;
}


/**modal**/
.modal-input {
    flex: 1;
    border: 1px solid #e5e5e5;
    padding-left: 8px;
    color: #333;
    padding-top: 5px;
    padding-bottom: 5px;
}