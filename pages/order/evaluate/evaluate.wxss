/* pages/order/evaluate/evaluate.wxss */
page {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 750rpx;
}

.contain {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.tip {
    margin-top: 40px;
    padding-bottom: 16px;
    font-size: 18px;
    color: #333;
}

.head-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50px;
}

.name {
    padding-top: 10px;
    font-size: 18px;
    color: #333;
}

.title {
    padding-top: 5px;
    font-size: 15px;
    color: #888;
}

.ratingBar {
    margin-top: 20px;
    width: 450rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.star-group {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.ratingBar image {
    width: 65rpx;
    height: 65rpx;
}

.star-text {
    padding-top: 5px;
    font-size: 15px;
    color: #f39700;
}

.textarea {
    margin-top: 28px;
    padding: 8px;
    width: 650rpx;
    border: 1px solid #e5e5e5;
    height: 120px;
    border-radius: 2px;
    font-size: 16px;
    line-height: 24px;
    color: #888;
}

.btn {
    margin-top: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 5px;
    width: 680rpx;
    height: 50px;
    color: #ffffff;
    font-size: 18px;
    background-color: #0783e8;
}

.btn:active {
    background-color: #7dbef4;
}